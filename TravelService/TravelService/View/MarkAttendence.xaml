<Window x:Class="TravelService.View.MarkAttendence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelService.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MarkAttendence" Height="210" Width="369">
    <Grid HorizontalAlignment="Left" Width="383" Margin="0,0,0,13" >
        <Button Content="Yes" HorizontalAlignment="Left" Click="YesButton_Click" Height="42" Margin="57,96,0,0" VerticalAlignment="Top" Width="106"/>
        <Button Content="No" HorizontalAlignment="Left" Click="NoButton_Click" Height="42" Margin="200,96,0,0" VerticalAlignment="Top" Width="109"/>
        <TextBlock HorizontalAlignment="Left"  Height="51" Margin="100,16,0,0" TextWrapping="Wrap" Text="Were you present?" FontSize="20" VerticalAlignment="Top" Width="199" RenderTransformOrigin="0.525,0.565"/>
    </Grid>
</Window>
